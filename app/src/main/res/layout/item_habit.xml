<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Habit Icon -->
        <ImageView
            android:id="@+id/habit_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/habit_icon"
            android:src="@android:drawable/ic_menu_compass" />

        <!-- Habit Name -->
        <TextView
            android:id="@+id/habit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/habit_icon"
            android:layout_marginStart="12dp"
            android:text="@string/habit_name_placeholder"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Habit Category -->
        <TextView
            android:id="@+id/habit_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/habit_name"
            android:layout_toEndOf="@id/habit_icon"
            android:layout_marginStart="12dp"
            android:text="@string/category_placeholder"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Habit Goal -->
        <TextView
            android:id="@+id/habit_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/habit_category"
            android:layout_toEndOf="@id/habit_icon"
            android:layout_marginStart="12dp"
            android:text="@string/goal_placeholder"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark" />

        <!-- Habit Time -->
        <TextView
            android:id="@+id/habit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/habit_goal"
            android:layout_toEndOf="@id/habit_icon"
            android:layout_marginStart="12dp"
            android:text="@string/time_placeholder"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_dark" />

        <!-- Delete button (Material Delete Icon) -->
        <ImageButton
            android:id="@+id/delete_habit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete"
            android:src="@drawable/ic_delete"
            app:tint="@android:color/holo_red_dark" />

        <!-- Edit button (Material Edit Icon) -->
        <ImageButton
            android:id="@+id/edit_habit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_toStartOf="@id/delete_habit"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/edit"
            android:src="@drawable/ic_edit"
            app:tint="@android:color/holo_blue_dark" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>